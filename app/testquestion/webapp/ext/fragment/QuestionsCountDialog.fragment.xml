<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="questionCountDialog"
        title="How many questions do you want to add?"
        contentWidth="500px" contentHeight="100px" 
        core:require="{handler: 'test/com/testquestion/ext/controller/utils'}"
       
    >
        <content>
            <Input
                id="questionCountInput"
                type="Number"
                placeholder="Enter number of questions"
            />
        </content>
        <beginButton>
            <Button
                id="confirmQuestionCountButton"
                text="OK"
                press="handler.onConfirmQuestionCount"
            />
        </beginButton>
        <endButton>
            <Button
                id="cancelQuestionCountButton"
                text="Cancel"
                press="handler.onCancelQuestionCount"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
